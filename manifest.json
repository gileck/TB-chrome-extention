{
  "manifest_version": 2,
  "version": "0.7.7",
  "name": "Chrome extension template",
  "description": "Chrome extension template",
  "browser_action": {
    "default_icon": "img/download.png",
    "default_popup": "html/popup.html",
    "default_title":"Chrome extension template"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "history",
    "clipboardRead"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": ["js/content.js"],
      "matches": ["*://*/*"],
      "run_at": "document_start"
    }
  ]
}